//The (at) symbol is razor syntax for using a C# code block
//The C# code sets the path to our layout page template.
//Null means this view is not using a layout page
@{
    Layout = null;
    var seriesTitle = "The Amazing Spiderman";
    var issueNumber = 700;
    var description = "<p>Final issue! Witness the final hours of Doctor Octopus's life and his one, last, great act of revenge! Even if Spider-Man survives... <strong>will Peter Parker?</strong></p>";
    var artists = new string[]
    {
        "Script: Dan Slott",
        "Pencils: Humberto Ramos",
        "Inks: Victor Olazaba",
        "Colors: Edgar Delgado",
        "Letters: Chris Eliopoulos"
    };
 }

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Comic Book Gallery</title>
</head>
<body>
    <div>
        <h1>@seriesTitle</h1>
        <h2>Issue #@issueNumber</h2>

        <h5>Description</h5>
        <div>@Html.Raw(description)</div>

        <h5>Artist</h5>
        <div>@artists</div>
    </div>
</body>
</html>
